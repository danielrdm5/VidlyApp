@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var classPopular = Model.Customers.Count > 1 ? "pupular" : null;
}

<h2 class="@classPopular">@Model.Movie.Name</h2>



@if (Model.Customers.Count == 0)
{
    <small>No one has rented this movie before.</small>
}
else
{

    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}